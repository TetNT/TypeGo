<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <solid android:color="@color/main_green_darker" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_radius" />
            <solid android:color="@color/main_green_darker"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_radius" />
            <gradient android:startColor="@color/main_green_darker" android:endColor="@color/main_green"/>
        </shape>
    </item >
</selector>