<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_passed_tests_item"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/cardview_main_dark_gray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_prev_res" />

            <TextView
                android:id="@+id/itemDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Date time"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/redring_regular"/>

            <TextView
                android:id="@+id/itemWPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="WPM"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/itemTimeInSeconds"
                app:layout_constraintStart_toEndOf="@+id/itemImage"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/redring_bold"/>

            <TextView
                android:id="@+id/itemTimeInSeconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_timer"
                android:layout_marginBottom="4dp"
                android:text="@string/allotted_time"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/itemWPM"
                app:layout_constraintTop_toBottomOf="@id/itemWPM"
                app:layout_constraintBottom_toBottomOf="parent"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/redring_regular"
                />

            <TextView
                android:id="@+id/itemLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/language"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_language"
                app:layout_constraintStart_toEndOf="@id/itemTimeInSeconds"
                app:layout_constraintTop_toTopOf="@id/itemTimeInSeconds"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/redring_regular"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
