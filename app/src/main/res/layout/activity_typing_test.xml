<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypingTestActivity">

    <EditText
        android:id="@+id/words"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_dark_gray"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="start|top"
        android:inputType="textMultiLine|textNoSuggestions"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:textSize="30sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inputSection"
        />

    <LinearLayout

        android:id="@+id/inputSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <EditText
            android:id="@+id/inpWord"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:background="@drawable/text_input"
            android:ems="10"
            android:hint="@string/input_text_above"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName"
            android:paddingStart="10dp"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="10dp"
            android:text="@string/time_over"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/restartButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:contentDescription="Restart test button"
            android:focusable="false"
            android:onClick="restartTest"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_popup_sync" />
    </LinearLayout>

    <Button
        android:id="@+id/bCancelTest"
        style="@style/accent_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mainbutton"
        android:backgroundTint="@color/bg_dark_gray"
        android:onClick="cancelTest"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/testLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/words"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>