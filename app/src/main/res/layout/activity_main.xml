<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/cardsSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMainActivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/activity_title"
                android:textSize="48sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_italic"
                android:text="@string/splash_text"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardUsualTest"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="16dp"
                style="@style/basic_cardview"
                android:onClick="startBasicTest"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/cardUsualTestHeader"
                        style="@style/submenu_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:drawablePadding="4dp"
                        android:text="@string/basic_test"
                        android:fontFamily="@font/redring_bold"
                        app:drawableStartCompat="@drawable/ic_testing"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:drawableTint="@color/button_main_green_unpressed" />

                    <TextView
                        android:id="@+id/cardUsualTestDescription"
                        android:layout_width="200dp"
                        android:layout_height="0dp"
                        android:layout_margin="16dp"
                        android:text="@string/basic_test_desc"
                        android:fontFamily="@font/redring_regular"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@id/languageSelection"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardUsualTestHeader" />

                    <RelativeLayout
                        android:id="@+id/languageSelection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="8dp">

                        <Spinner
                            android:id="@+id/spinnerBasicTestLanguageSelection"

                            android:layout_width="210dp"
                            android:layout_height="30dp"

                            android:paddingStart="4dp"
                            android:paddingTop="1dp"
                            android:paddingEnd="4dp"
                            android:paddingBottom="1dp"
                             />

                    </RelativeLayout>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="8dp"
                        app:tint="@color/white"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCustomizableTest"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="16dp"
                style="@style/basic_cardview"
                android:onClick="openTestCustomization">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/cardCustomTestHeader"
                        style="@style/submenu_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:drawablePadding="4dp"
                        android:text="@string/custom_test"
                        app:drawableStartCompat="@drawable/ic_settings"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:drawableTint="@color/button_main_green_unpressed" />

                    <TextView
                        android:id="@+id/cardCustomTestDescription"
                        android:layout_width="200dp"
                        android:layout_height="0dp"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/redring_regular"
                        android:text="@string/custom_test_desc"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardCustomTestHeader" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="8dp"
                        app:tint="@color/white"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserAccount"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="16dp"
                style="@style/basic_cardview"
                android:onClick="openUserAccount"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/cardAccountHeader"
                        style="@style/submenu_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:gravity="center_vertical"
                        android:drawablePadding="4dp"
                        android:text="@string/profile"
                        app:drawableStartCompat="@drawable/ic_account"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:drawableTint="@color/button_main_green_unpressed" />

                    <TextView
                        android:id="@+id/cardAccountDescription"
                        android:layout_width="200dp"
                        android:layout_height="0dp"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/redring_regular"
                        android:text="@string/profile_desc"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardAccountHeader" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="8dp"
                        app:tint="@color/white" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/release_notes_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_release_notes"
                android:name="com.tetsoft.typego.ui.ReleaseNotesFragment"
                android:layout_marginVertical="16dp"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>