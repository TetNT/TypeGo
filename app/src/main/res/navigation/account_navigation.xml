<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_navigation"
    app:startDestination="@id/navigation_account">

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.tetsoft.typego.ui.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.tetsoft.typego.ui.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_navigation_account_to_achievements"
            app:destination="@id/navigation_achievements" />
    </fragment>
    <fragment
        android:id="@+id/navigation_achievements"
        android:name="com.tetsoft.typego.ui.AchievementsFragment"
        android:label="fragment_achievements"
        tools:layout="@layout/fragment_achievements" />
</navigation>