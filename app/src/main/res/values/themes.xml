<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="TypeGo" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorOnPrimary">@color/bg_lighter_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_dark_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:textViewStyle">@style/textview_default</item>
        <item name="android:buttonStyle">@style/action_button</item>
    </style>

    <style name="Theme.TypeGo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TypeGo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TypeGo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>