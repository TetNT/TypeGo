<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="submenu_header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/redring_bold</item>
    </style>

    <style name="accent_button" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/_continue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:typeface">sans</item>

    </style>

    <style name="input_fields">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="activity_title">
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="scrollbars">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/main_green_darker</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarSize">2dip</item>
    </style>
    <style name="textview_clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#0645AD</item>
    </style>

    <style name="list_fields">
        <item name="android:drawableTint">@color/main_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="spinner_item">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="basic_cardview">
        <item name="cardBackgroundColor">@color/cardview_main_dark_gray</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
    </style>
    <style name="textview_default" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/redring_regular</item>
    </style>
</resources>
