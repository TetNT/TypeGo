<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="submenu_header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accent_button" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/_continue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:typeface">sans</item>

    </style>

    <style name="input_fields">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="activity_title">
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scrollbars">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/button_main_green_pressed</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>
    <style name="textview_clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#0645AD</item>
    </style>


    <style name="list_fields">
        <item name="android:drawableTint">@color/button_main_green_unpressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
